<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">


    <EditText
        android:id="@+id/studentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Student's Name"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="12dp"
        />

    <EditText
        android:id="@+id/mathScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/studentName"
        android:hint="Mathematics Score"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:padding="12dp"
        />

    <EditText
        android:id="@+id/scienceScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mathScore"
        android:hint="Science Score"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:padding="12dp"
        />

    <EditText
        android:id="@+id/englishScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scienceScore"
        android:hint="English Score"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:padding="12dp"
        />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/englishScore"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="128dp"
        android:padding="15dp"
        android:text="Calculate"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calculateButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="105dp"
        android:text="Result will be displayed here"
        android:textSize="18sp"
        />

</RelativeLayout>
